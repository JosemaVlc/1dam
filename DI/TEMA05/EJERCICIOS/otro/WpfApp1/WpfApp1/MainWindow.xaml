<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Height="57" TextWrapping="Wrap">
            <Run Text="{Binding Text, ElementName=NombreApellido, Mode=OneWay}"/>
        </TextBlock>
        <TextBox Name="NombreTextBox" Height="54" Margin="0,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Name="ApellidoTextBox" Height="54" TextWrapping="Wrap" Width="210" Text="{Binding Apellido, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Name="NombreApellidoTextBox" Height="54" TextWrapping="Wrap" Text="{Binding nombreCompleto, Mode=OneWay}" Width="210"/>
    </StackPanel>
</Window>
