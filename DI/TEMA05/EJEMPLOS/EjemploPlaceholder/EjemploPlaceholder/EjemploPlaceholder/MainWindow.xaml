<Window x:Class="EjemploPlaceholder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjemploPlaceholder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:ClearableTextBox Grid.Row="1" Width="250" Height="40" Placeholder="First Name" />
        <local:ClearableTextBox Grid.Row="2" Width="250" Height="40" Placeholder="Last Name"/>
        <local:ClearableTextBox Grid.Row="3" Width="250" Height="40" Placeholder="Username"/>
        <local:ClearableTextBox Grid.Row="4" Width="250" Height="40" Placeholder="Phone number"/>

    </Grid>
    
</Window>
