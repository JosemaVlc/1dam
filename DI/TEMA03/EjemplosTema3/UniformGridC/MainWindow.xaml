<Window x:Class="UniformGridC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniformGridC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" x:Name="minasRestantesTextBlock" Text="Minas restantes: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
    <Button Grid.Row="0" Content="Hola" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
    <UniformGrid Grid.Row="1" Rows="9" Columns="9" x:Name="gameGrid">
        <!-- Aquí crearemos las casillas del juego mediante código -->
    </UniformGrid>
    </Grid>
</Window>
