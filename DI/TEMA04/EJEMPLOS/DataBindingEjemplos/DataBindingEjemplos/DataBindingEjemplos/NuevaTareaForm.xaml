<Window x:Class="DataBindingEjemplos.NuevaTareaForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingEjemplos"
        mc:Ignorable="d"
        Title="NuevaTarea" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Título:" />
            <TextBox Name="txtTitulo" />
            <Label Content="Descripción:" />
            <TextBox Name="txtDescripcion" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                <Button Content="Aceptar" Margin="10" Click="Aceptar_Click" />
                <Button Content="Cancelar" Margin="10" Click="Cancelar_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
