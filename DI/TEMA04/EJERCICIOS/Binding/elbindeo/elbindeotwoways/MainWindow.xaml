<Window x:Class="elbindeotwoways.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:elbindeotwoways"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Text="{Binding ElementName=miSlider, Path=Value, Mode=TwoWay}"
                 FontSize="{Binding Path=Value, ElementName=miSlider}">
        </TextBox>

        <Slider x:Name="miSlider"
                Minimum="10" Maximum="40" Value="15"/>
    </StackPanel>
</Window>
