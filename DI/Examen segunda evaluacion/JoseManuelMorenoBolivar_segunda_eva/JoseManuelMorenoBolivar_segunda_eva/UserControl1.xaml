<UserControl x:Class="JoseManuelMorenoBolivar_segunda_eva.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JoseManuelMorenoBolivar_segunda_eva"
             mc:Ignorable="d" >
    <StackPanel Orientation="Horizontal">
        <Label x:Name="LabelPathEntrada"/>
        <TextBox Width="50" Height="30" Text="{Binding CambioText, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Padding="5" Height="30" Text="Al Cambio ->" TextAlignment="Center"/>
        <TextBox Height="30" Text="{Binding CambioMoneda}" IsEnabled="False"/>
        <Label x:Name="LabelPathSalida"/>
        <TextBlock Padding="5" Text="Tasa de cambio" Height="30" TextAlignment="Center"/>
        <TextBlock x:Name="LabelPathTasa" Padding="5"/>
    </StackPanel>
</UserControl>
